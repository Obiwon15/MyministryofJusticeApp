@using Microsoft.AspNet.Identity
@using ministryofjusticeDomain.Enum
@using ministryofjusticeWebUi.Models
@model IEnumerable<CaseDetailsViewModel>

@{
    var cases = Model;
}

<section class="row">
    <div class="col-xxl-3 col-lg-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-3">
                        <div class="text-white-75 small">Accepted Cases</div>
                        <div class="text-lg font-weight-bold">@cases.Count(c => c.StatusID == Status.Assigned)</div>
                    </div>
                    <i class="feather-xl text-white-50" data-feather="check-square"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Action("AssignedCases", "Case")">View Cases</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-3">
                        <div class="text-white-75 small">Processing Cases</div>
                        <div class="text-lg font-weight-bold">@cases.Count(c => c.StatusID == Status.Processing)</div>
                    </div>
                    <i class="feather-xl text-white-50" data-feather="file-text"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Action("AssignedCases", "Case")">View Cases</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-6">
        <div class="card bg-indigo text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-3">
                        <div class="text-white-75 small">Finished Cases</div>
                        <div class="text-lg font-weight-bold">@cases.Count(c => c.StatusID == Status.RequestClose)</div>
                    </div>
                    <i class="feather-xl text-white-50" data-feather="x-square"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Action("AssignedCases", "Case")">View Cases</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-6">
        <div class="card bg-red text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-3">
                        <div class="text-white-75 small">Closed Cases</div>
                        <div class="text-lg font-weight-bold">@cases.Count(c => c.StatusID == Status.Closed)</div>
                    </div>
                    <i class="feather-xl text-white-50" data-feather="x-square"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Action("AssignedCases", "Case")">View Cases</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</section>
