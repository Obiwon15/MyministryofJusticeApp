@using ministryofjusticeWebUi.Models
@model IEnumerable<CaseDetailsViewModel>
@{
    ViewBag.Title = "Welcome";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
    var name = ViewBag.fullname;
    var cases = Model;
}

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <span class="page-header-icon"><i data-feather="home"></i></span>
                        Welcome @name!
                    </h1>
                    <div class="page-header-subtitle">Use this blank page as a starting point for creating new pages inside your project!</div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main page content-->
<main class="container mt-n10">
    @if (User.IsInRole("Attorney General"))
    {
        @Html.Partial("_AttoneryGeneralDashboard", cases)
    }

    @if (User.IsInRole("Director of Department"))
    {
        @Html.Partial("_HodDashboard", cases)

    }

    @if (User.IsInRole("Lawyer"))
    {
        @Html.Partial("_LawyerDashboard", cases)
    }
</main>