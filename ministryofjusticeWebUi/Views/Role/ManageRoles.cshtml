@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    Layout = "_RoleLayout.cshtml";
    ViewBag.Title = "Manage roles";
    var roles = Model;
}

<div class="row">
    <div class="card mb-4 col-md-11 mx-auto">
        <div class="card-header">
            <div class="d-flex w-100 justify-content-between">
                All roles
                <a href="@Url.Action("CreateRole")" class="btn btn-primary btn-sm"><i class="fas fa-plus mr-2"></i>Add role</a>
            </div>
        </div>
        <div class="card-body">
            @foreach (var role in roles)
            {
                <!-- Item 1-->
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="d-flex align-items-center flex-shrink-0 mr-3">
                        <div class="avatar avatar-xl mr-3 bg-gray-200">
                            <i class="far fa-address-card"></i>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <a class="text-dark line-height-normal mb-1" href="#!">@role.Name</a>
                            <div class="small text-muted line-height-normal">@role.Id</div>
                        </div>
                    </div>
                    <div class="dropdown no-caret">
                        <button class="btn btn-transparent-dark btn-icon dropdown-toggle" id="dropdownPeople1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i data-feather="more-vertical"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right animated--fade-in-up" aria-labelledby="dropdownPeople1">
                            <a class="dropdown-item text-primary" href="@Url.Action("EditRole", "Role", new { id = role.Id})"><i data-feather="edit-2" class="mr-2"></i>Edit role</a>
                            <a class="dropdown-item text-purple" href="#!"><i data-feather="user-check" class="mr-2"></i>Manage role users</a>
                            <a class="dropdown-item text-danger" href="#!"><i data-feather="trash" class="mr-2"></i>Delete role</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>