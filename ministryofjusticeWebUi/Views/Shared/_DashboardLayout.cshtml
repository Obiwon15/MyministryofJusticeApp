@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Minisry of Justice</title>

    <!-- Custom fonts for this template-->
    @Styles.Render("~/Assets/fontawesome")
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <!-- Custom styles for this template-->
    @Styles.Render("~/Assets/main")
    @Styles.Render("~/Assets/vendor")
    <script data-search-pseudo-elements defer
            src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js"
            crossorigin="anonymous"></script>
</head>

<body id="page-top" class="nav-fixed">

    @Html.Partial("_Navbar")
    <div id="layoutSidenav">
        @Html.Partial("_Sidebar")
        <div id="layoutSidenav_content">
            <main class="position-relative">
                @if (TempData["Message"] != null)
                {
                    <div class="toast position-fixed" style="right: 1rem; top: 4rem; z-index: 400; opacity: 1; width: 20rem" role="alert" aria-live="assertive" aria-atomic="true" data-delay="5000" id="toast-alert">
                        <div class="toast-header text-primary bg-white">
                            <i data-feather="bell"></i>
                            <strong class="mr-auto">Done!</strong>
                            <small class="text-muted ml-2">just now</small>
                            <button class="ml-2 mb-1 close" type="button" data-dismiss="toast" aria-label="Close" onclick="closeToast()">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="toast-body bg-gray-100 bg-white">
                            <p class="font-weight-500">@TempData["Message"]</p>
                        </div>
                    </div>
                    @*<p>@TempData["Message"]</p>*@
                }
                @RenderBody()
            </main>
            <footer class="footer mt-auto footer-light">
                <section class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 small">Copyright &#xA9; Libra 2021</div>
                        <div class="col-md-6 text-md-right small">
                            <a href="#">Privacy Policy</a>
                            &#xB7;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </section>
            </footer>
        </div>

    </div>
    <!-- Logout Modal-->
    @Html.Partial("_LogoutModal")
    @Scripts.Render("~/Assets/scripts")
    @Scripts.Render("Assets/plugins")
    @RenderSection("scripts", required: false)
    
    <script>
        var toastAlert = document.getElementById("toast-alert");

        function closeToast() {
            toastAlert.style.display = "none";
        }
    </script>
</body>

</html>