@model ministryofjusticeWebUi.Models.DepartmentViewModel
@{
    Layout = "_DepartmentLayout.cshtml";
    ViewBag.Title = "Create department";
}

<div class="card mb-4 col-md-8">
    <div class="card-header">Add a New Department</div>
    <div class="card-body">
        @using (Html.BeginForm("CreateDepartment", "Department", null, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new {@class = "text-danger small"})
            <!--Email-->
            <div class="form-group">
                @Html.LabelFor(m => m.DepartmentName,
                    new {@class = "col-md-6 control-label"})
                <div>
                    @Html.TextBoxFor(m => m.DepartmentName,
                        new
                        {
                            @class = "form-control form-control-user",
                            @id = "exampleInputEmail",
                            @placeholder = "Enter first name"
                        })
                    @Html.ValidationMessageFor(m => m.DepartmentName, "", new {@class = "text-danger small"})
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description,
                    new {@class = "col-md-6 control-label"})
                <div>
                    @Html.TextAreaFor(m => m.Description,
                        new
                        {
                            @class = "form-control form-control-user ",
                            @id = "exampleInputEmail",
                            @placeholder = " Information pertaining to the department"
                        })
                    @Html.ValidationMessageFor(m => m.Description, "", new {@class = "text-danger small"})
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
                Create Department
            </button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}